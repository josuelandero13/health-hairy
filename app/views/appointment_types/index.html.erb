<div class='p-8 mx-20'>
  <% content_for :title, 'Appointment types' %>

  <div class='flex justify-between items-center'>
    <h1 class='font-bold text-4xl'><%= t('appointment_types.views.index.title') %></h1>
    <%=
      link_to t('appointment_types.views.new_appointment_type'), new_appointment_type_path,
        class: 'rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium'
    %>
  </div>

  <div id='appointment_types' class='min-w-full'>
    <% @appointment_types.each do |appointment_type| %>
      <%= render appointment_type %>
    <% end %>
  </div>
</div>
