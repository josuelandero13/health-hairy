<div class='mx-auto md:w-2/3 w-full flex'>
  <div class='mx-auto'>
    <% if notice.present? %>
      <p
        id='notice'
        class='py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium
               rounded-lg inline-block'
      >
        <%= notice %>
      </p>
    <% end %>

    <%= render @city %>

    <%= link_to 'Edit this city', edit_city_path(@city),
      class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <%= link_to 'Back to cities', cities_path,
      class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <div class='inline-block ml-2'>
      <%= button_to 'Destroy this city', @city,
        method: :delete, class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium' %>
    </div>
  </div>
</div>
