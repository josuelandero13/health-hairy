<div class='w-full'>
  <% if notice.present? %>
    <p
      id='notice'
      class='py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block'
    >
      <%= notice %>
    </p>
  <% end %>

  <% content_for :title, 'Locals' %>

  <div class='flex justify-between items-center'>
    <h1 class='font-bold text-4xl'>Locals</h1>
    <%= link_to 'New local', new_local_path,
      class: 'rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium' %>
  </div>

  <div id='locals' class='min-w-full'>
    <% @locals.each do |local| %>
      <%= render local %>
      <p>
        <%= link_to 'Show this local', local,
          class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
      </p>
    <% end %>
  </div>
</div>
