<div
  id="<%= dom_id pet %>"
  class="p-6 w-2/3 bg-white justify-content-center shadow-md
         rounded-lg border border-gray-200"
>
  <section class="flex items-center space-x-4">
    <div class="w-20 h-20 overflow-hidden rounded-full border-2 border-blue-500">
      <% if pet.photo.attached? %>
        <%= image_tag pet.photo, class: 'w-full h-full object-cover' %>
      <% else %>
        <%= image_tag 'placeholder.png', class: 'w-full h-full object-cover' %>
      <% end %>
    </div>
    <div>
      <h2 class="text-xl font-semibold text-gray-800">
        <%= pet.name %>
      </h2>
      <p class="text-sm text-gray-600">
        Owned by: <%= "#{pet.user&.first_name} #{pet.user&.last_name}" %>
      </p>
    </div>
  </section>

  <section class="mt-4 space-y-3">
    <p class="text-gray-700">
      <span class="font-medium text-gray-900">Breed:</span>
      <%= pet.breed %>
    </p>

    <p class="text-gray-700">
      <span class="font-medium text-gray-900">Kind:</span>
      <%= pet.kind %>
    </p>

    <p class="text-gray-700">
      <span class="font-medium text-gray-900">Important Notes:</span>
      <span class="block mt-1 text-sm text-gray-600">
        <%= pet.important_notes.body.to_plain_text %>
      </span>
    </p>

    <div>
      <p>
        <%=
          link_to 'Show this pet', pet,
            class: 'm-20 rounded-lg py-3 px-5 bg-gray-200 text-gray-700 font-semibold
                    hover:bg-blue-500 hover:text-white hover:shadow-lg transition-all
                    duration-300 ease-in-out transform hover:scale-105'
        %>
      </p>
    </div>
  </section>
</div>