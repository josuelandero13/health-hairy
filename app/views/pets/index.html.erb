<div class='w-full'>
  <% content_for :title, 'Pets' %>

  <div class='flex justify-between items-center'>
    <h1 class='font-bold text-4xl'>Pets</h1>
    <%= link_to 'New pet', new_pet_path, class: 'rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium' %>
  </div>

  <div id='pets' class='min-w-full'>
    <% @pets.each do |pet| %>
      <%= render pet %>
      <p>
        <%= link_to 'Show this pet', pet, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
      </p>
    <% end %>
  </div>
</div>
