<div
  id="<%= dom_id appointment_type %>"
  class="border border-gray-200 rounded-lg p-6 shadow-lgbg-white"
>
  <p class="my-5">
    <strong class="block font-medium mb-1">Payment required:</strong>
    <%= appointment_type.payment_required %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= appointment_type.name %>
  </p>

  <p class="my-5 flex justify-start items-center gap-3">
    <strong class="block font-medium mb-1">User:</strong>
    <%= appointment_type&.user&.first_name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Price:</strong>
    <%= appointment_type.price %>
  </p>
  <% if appointment_type.description.present? %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Description:</strong>
      <%= appointment_type.description %>
    </p>
  <% end %>

  <div class="flex justify-end items-center border-t border-gray-400 py-8">
    <% if action_name != 'show' %>
      <p>
        <%= link_to t('appointment_types.link_to_show_appointment_type'), appointment_type,
          class: 'm-20 rounded-lg py-3 px-5 bg-gray-200 text-gray-700 font-semibold
                  hover:bg-blue-500 hover:text-white hover:shadow-lg transition-all
                  duration-300 ease-in-out transform hover:scale-105'
        %>
      </p>
    <% end %>
  </div>
</div>
