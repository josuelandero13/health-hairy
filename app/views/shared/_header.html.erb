<div
  data-controller='menu'
  class='bg-gradient-to-r from-blue-400 to-teal-500 flex
         justify-between items-center py-4 px-8'
>
  <%= link_to root_path do %>
    <h1 class='text-3xl font-bold text-white'><%= t('app_name') %></h1>
  <% end %>

  <button class='sm:hidden text-white' data-action='click->menu#toggle'>
    <%= image_tag 'svg/menu.svg', width: 35, height: 35, class: 'text-white' %>
  </button>

  <div class='hidden sm:block'><%= render partial: 'shared/items' %></div>

  <!-- Menu mobile -->
  <div
    data-menu-target='items'
    class='fixed gap-4 flex sm:hidden bg-gradient-to-r from-blue-400 to-teal-500
           top-0 right-0 shadow z-11 h-full flex-col min-w-[45%] w-1/2 overflow-y-scroll
           ease-in-out duration-200 p-5 translate-x-full'
  >
    <div
      data-action='click->menu#toggle'
      class='fixed z-10 w-1/2 h-full top-0 left-0 bg-black bg-opacity-40'
    ></div>

    <button class='mb-4' data-action='click->menu#toggle'>
      <%= image_tag 'svg/close.svg', width: 35, height: 35 %>
    </button>

    <%= render partial: 'shared/items' %>
  </div>
</div>
