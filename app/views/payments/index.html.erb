<div class='w-full'>
  <% content_for :title, 'Payments' %>

  <div class='flex justify-between items-center'>
    <h1 class='font-bold text-4xl'>Payments</h1>
    <%=
      link_to 'New payment', new_payment_path,
        class: 'rounded-lg py-3 px-5 bg-blue-600 text-white
                block font-medium'
    %>
  </div>

  <div id='payments' class='min-w-full'>
    <% @payments.each do |payment| %>
      <%= render payment %>
      <p>
        <%=
          link_to 'Show this payment', payment,
            class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100
                    inline-block font-medium'
        %>
      </p>
    <% end %>
  </div>
</div>
