<div
  id='<%= dom_id city %>'
  class='p-4 block rounded-lg bg-white text-center border
       border-neutral-300 shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)]'
>
  <p class='my-5 flex gap-5'>
    <strong class='block font-medium mb-1'>
      Name:
    </strong>
    <%= city.name %>
  </p>

  <% if action_name != 'show' %>
    <%=
      link_to 'Show this city', city,
        class: 'rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium border-e-2'
    %>
    <%=
      link_to 'Edit this city', edit_city_path(city),
        class: 'rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium border-e-2'
    %>
  <% end %>
</div>