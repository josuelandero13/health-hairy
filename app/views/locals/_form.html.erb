<%= form_with(model: local, class: 'contents') do |form| %>
  <% if local.errors.any? %>
    <div
      id='error_explanation'
      class='bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3'>
      <h2>
        <%= pluralize(local.errors.count, 'error') %> prohibited this local from being saved:
      </h2>

      <ul>
        <% local.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='my-5'>
    <%= form.label :city_id %>
    <%= form.text_field :city_id,
      class: 'block shadow rounded-md border border-gray-400
              outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class='my-5'>
    <%= form.label :address %>
    <%= form.textarea :address, rows: 4,
      class: 'block shadow rounded-md border border-gray-400
              outline-none px-3 py-2 mt-2 w-full' %>
  </div>

  <div class='inline'>
    <%= form.submit class: 'rounded-lg py-3 px-5 bg-blue-600 text-white
                            inline-block font-medium cursor-pointer' %>
  </div>
<% end %>
